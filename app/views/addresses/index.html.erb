<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Address</th>
    <th>Address additional</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.user_id %></td>
    <td><%= address.address %></td>
    <td><%= address.address_additional %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.country %></td>
    <td><%= address.zip %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

