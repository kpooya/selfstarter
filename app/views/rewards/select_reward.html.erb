<style>
    .title {
        font-size: 20px;
    }

    h2 {
        margin-bottom: 10px;
    }

    .perk {
        margin-bottom: 15px;
    }

    .fr {
        float: right;
    }

    .dynamic_bg {
        margin-bottom: 0px;
    }
    .shadow {
        background: #d2d2d2;
        box-shadow: 1px 1px 2px #888;
    }
    .rounded {
        border-radius: 6px;
    }
    .perks-selection input {
        margin-left: 60px;
        margin-top: 15px;
        display: inline-block;
        vertical-align: top;
    }
    .perks-selection label {
        display: inline-block;
        width: auto;
        line-height: normal;
        margin: 0;
    }
    .perks-selection .perk {
        width: 380px;
        font-size: 20px;
        margin-left: 170px;
        padding-bottom: 20px;
        margin-top: -20px;
    }

    .perks-selection .claimed {
        font-size: 17px;
    }
    .perks-selection .money {
        background: none;
        color: #222;
        font-family: SecondaSoft-Bold,Arial,sans-serif;
        font-size: 22px;
        line-height: 18px;
        margin: 15px 10px 0px 9px;
        padding: 0px;
        display: inline-block;
        word-wrap: break-word;
    }
    .dynamic_bg:hover {
        background-color: #abd7db !important;
        -webkit-transition: 500ms linear 0s;
        -moz-transition: 500ms linear 0s;
        -o-transition: 500ms linear 0s;
        transition: 500ms linear 0s;
        outline: 0 none;
        transition: .5s;
        cursor: pointer;
    }

</style>

<script type="text/javascript">
	function formElementBlur(target,initalName,isPassword){
		if(target.value == ''){
			target.value = initalName;
			if((isPassword == true)){
				target.type = "text"
			}
		}
	}

	function formElementFocus(target,initalName,isPassword){
		if(target.value == initalName){
			target.value = '';
		}
		if(isPassword == true){
			target.type = "password"
		}
	}
</script>

